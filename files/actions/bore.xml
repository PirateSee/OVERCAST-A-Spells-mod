<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      gravity_y="35"
      air_friction="0.3s"
	  mass="0.26"
	  >
    </VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="1.4"
    lob_max="3"
    speed_min="150"
    speed_max="200"
    friction="1"
    direction_random_rad="0.00"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0"
    on_collision_die="0"
    lifetime="300"
    damage="0"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="1.5"
    hit_particle_force_multiplier="1"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_small_pink.xml"
    shoot_light_flash_r="255"
    shoot_light_flash_g="0"
    shoot_light_flash_b="0"
    shoot_light_flash_radius="64" 
	knockback_force="0.2"
	physics_impulse_coeff="3"
	>
	<damage_by_type drill="0.5" >
    </damage_by_type>
    <config_explosion
      never_cache="1" 
      damage="0.1"
      camera_shake="2" 
      explosion_radius="4" 
      explosion_sprite="data/particles/explosion_008.xml"
      explosion_sprite_lifetime="3.6" 
      create_cell_probability="0"
      hole_destroy_liquid="0" 
      hole_enabled="1" 
      ray_energy="40000"
      cell_explosion_power_ragdoll_coeff="0.8"
      max_durability_to_destroy="8"
      particle_effect="0" 
      damage_mortals="1"
	  physics_explosion_power.min="4"
      physics_explosion_power.max="5" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="2" 
      sparks_count_min="1" 
      sparks_enabled="1"  
      material_sparks_enabled="1"
      material_sparks_count_max="3"
      material_sparks_count_min="1"
	  light_enabled="0" 
      stains_enabled="1"
      stains_radius="3" >
    </config_explosion>
  </ProjectileComponent>
  
    <CellEaterComponent
		eat_probability="50"
        radius="5.5"
		ignored_material="rock_static_cursed"
		ignored_material_tag="[matter_eater_ignore_list]"
		>
    </CellEaterComponent>
	
	<LuaComponent
		script_source_file="data/scripts/projectiles/clipping_shot.lua"
		execute_every_n_frame="1"
		remove_after_executed="1"
		>
	</LuaComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
	offset_x="6"
	offset_y="3.5"
    image_file="mods/cool_spell/files/projectiles_gfx/bore.png" 
    next_rect_animation="default"
    rect_animation="default"
	additive="1"
     >
  </SpriteComponent>
  
  	<!-- dense emitter -->
	<ParticleEmitterComponent 
		emitted_material_name="smoke"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-4"
		x_pos_offset_max="4"
		y_pos_offset_min="-4"
		y_pos_offset_max="4"
		x_vel_min="4"
		x_vel_max="6"
		y_vel_min="4"
		y_vel_max="6"
		gravity.y="0.0"
		count_min="8"
		count_max="14"
		lifetime_min="4.8"
		lifetime_max="8.4"
		is_trail="1"
		trail_gap="8.0"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="0.2"
		airflow_time="1.9"
		airflow_scale="0.1"
		emission_interval_min_frames="2"
		emission_interval_max_frames="4"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<LightComponent 
    _enabled="1" 
	r="200"
	g="200"
	b="40"
    radius="8" >
  </LightComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/propane_tank">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/cool_spell/files/actions/bore.xml"
		>
	</VariableStorageComponent>

</Entity>